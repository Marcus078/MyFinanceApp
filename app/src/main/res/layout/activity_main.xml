<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <TextView
            android:layout_width="81dp"
            android:layout_height="28dp"
            android:text="Finance app"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginTop="156dp"/>

    <Button
            android:text="Deposit"
            android:layout_width="112dp"
            android:layout_height="48dp"
            android:id="@+id/btnDeposit"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="240dp"
            android:layout_marginStart="164dp"/>
    <Button
            android:text="Withdraw"
            android:layout_width="115dp"
            android:layout_height="49dp"
            android:id="@+id/btnWithdraw"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="372dp"
            android:layout_marginStart="164dp"/>
    <Button
            android:text="Transfer"
            android:layout_width="116dp"
            android:layout_height="40dp"
            android:id="@+id/btnTransfer"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="312dp"
            android:layout_marginStart="164dp"/>


    <Button
            android:text="History"
            android:layout_width="116dp"
            android:layout_height="40dp"
            android:id="@+id/btnViewTransactions"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="436dp"
            android:layout_marginStart="164dp"/>
    <Button
            android:text="Balance"
            android:layout_width="116dp"
            android:layout_height="40dp"
            android:id="@+id/btnViewBalance"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="496dp"
            android:layout_marginStart="164dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>