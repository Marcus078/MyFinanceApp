<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TransferActivity">

    <EditText
            android:id="@+id/edtAmount"
            android:layout_width="287dp"
            android:layout_height="47dp"
            android:hint="Amount"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="172dp"
            android:layout_marginStart="76dp"/>
    <EditText
            android:id="@+id/edtRecipientAccount"
            android:layout_width="286dp"
            android:layout_height="46dp"
            android:hint="Recipient Account Number"
            app:layout_constraintTop_toBottomOf="@id/edtAmount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="20dp"
            app:layout_constraintHorizontal_bias="0.603"/>
    <Button
            android:id="@+id/btnSubmitTransfer"
            android:layout_width="289dp"
            android:layout_height="43dp"
            android:text="Submit Transfer"
            app:layout_constraintTop_toBottomOf="@id/edtRecipientAccount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="28dp"
            app:layout_constraintHorizontal_bias="0.649"/>
    <TextView

            android:layout_width="234dp"
            android:layout_height="44dp"
            android:id="@+id/txtCurrentBalance"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="104dp"
            android:layout_marginStart="104dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>